{
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":assignAndReview(olipayne)",
    ":rebaseStalePrs",
    ":preserveSemverRanges",
    ":semanticCommits"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": [
        "^@grafana/"
      ],
      "groupName": "grafana packages"
    }
  ]
}